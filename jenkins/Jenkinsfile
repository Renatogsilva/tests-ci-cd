pipeline {
    agent none

    stages {
        stage('Clone') {
            agent {
                docker { image 'maven:3.9.9-eclipse-temurin-21-alpine' }
            }
            steps {
                sh 'mvn --version'
            }
        }
        stage('Build') {
            steps {
                sh 'echo Buildando projeto...'
            }
        }
        stage('Run Tests') {
            steps {
                sh 'echo Executando projeto...'
            }
        }
    }
}